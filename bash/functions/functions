# Bash functions

##
## Opens project's todo file (arg1 = alias to project directory)
##
todo () {
$1
open TODO.md
}


##
## Generates skeleton for new ruby project (arg1 = project name)
##
rubynew () {
mkdir $1 $1/lib $1/spec

cat >$1/spec/spec_helper.rb <<EOF
require 'rspec'

Dir["./lib/*.rb"].each { |file| require file }
EOF

cat >$1/spec/_spec.rb <<EOF
require 'spec_helper'

describe Something do
  it "does something"
end
EOF
}
