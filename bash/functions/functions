# Bash functions

##
## Java server functions
##
dahomey() {
  if [ $# -eq 0 ]
  then
    cd ~/8thlight/dahomey/

  elif [ $1 = "jar" ]
  then
    jar cfmv dahomey.jar ~/8thlight/dahomey/manifest-additions.txt -C ~/8thlight/dahomey/out/production/dahomey/ .

  elif [ $1 = "start" ]
  then
    java -jar dahomey.jar $*

  elif [ $1 = "dance" ]
  then
    dahomey jar
    dahomey start

  else
    echo "Invalid option. Valid options are: 'jar' to jar, 'start' to run jar, 'dance' to jar and run, or (nothing) to cd to directory"

  fi
}


##
## Generates skeleton for new ruby project (arg1 = project name)
##
rubynew () {
mkdir $1 $1/lib $1/spec

cat >$1/spec/spec_helper.rb <<EOF
require 'rspec'

Dir["./lib/*.rb"].each { |file| require file }
EOF

cat >$1/spec/_spec.rb <<EOF
require 'spec_helper'

describe Something do
  it "does something"
end
EOF
}
