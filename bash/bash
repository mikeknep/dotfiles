# Source all bash files
source ~/dotfiles/bash/bash.path
source ~/dotfiles/bash/bash.colors
for f in ~/dotfiles/bash/aliases/*; do source $f; done
for f in ~/dotfiles/bash/functions/*; do source $f; done
source ~/dotfiles/bash/bash.prompt
source ~/dotfiles/bash/bash.rvm

## Source all secret bash files
for f in ~/dotfiles/bash/secret/*; do source $f; done
