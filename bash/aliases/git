# Git aliases

alias gs='git status'
alias gp='git push'
alias gpl='git pull'
alias ga='git add'
alias gaa='git add -A'
alias gcm='git commit -m'
alias gcv='git commit -v'
alias gca='git commit --amend'
alias grh='git reset --hard'
alias gco='git checkout'
alias gl='git log --format="%C(magenta)%h %C(green)(%cr) %C(reset)%s %C(blue)<%an>%C(yellow)%d%Creset" --no-merges'
alias gd='git diff'
alias gb='git branch'
alias gg='git grep'
